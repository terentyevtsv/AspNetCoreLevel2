@model RegisterUserViewModel
@{
    ViewBag.Title = "Регистрация";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>New User Signup!</h2>
                    <form method="post" asp-action="Register" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
                        <span class="text-danger" asp-validation-for="UserName"></span>

                        <input asp-for="Email" placeholder="@nameof(Model.Email)" />
                        <span class="text-danger" asp-validation-for="Email"></span>

                        <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                        <span class="text-danger" asp-validation-for="Password"></span>

                        <input asp-for="ConfirmPassword" placeholder="@nameof(Model.ConfirmPassword)" />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                        <button type="submit" class="btn btn-default">Signup</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->
